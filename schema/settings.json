{
    "jupyter.lab.setting-icon-class": "jp-EditIcon",
    "jupyter.lab.setting-icon-label": "Jupyterlab Code Formatter",
    "title": "Jupyterlab Code Formatter",
    "description": "Jupyterlab Code Formatter settings.",
    "definitions": {
        "preferences": {
            "properties": {
                "default_formatter": {
                    "properties": {
                        "python": {
                            "anyOf": [
                                {"type": "string"},
                                {"type": "array", "element":  "string"}
                            ]
                        },
                        "R": {
                            "anyOf": [
                                {"type": "string"},
                                {"type": "array", "element":  "string"}
                            ]
                        }
                    },
                    "additionalProperties": true,
                    "type": "object"
                }
            },
            "additionalProperties": false,
            "type": "object"
        },
        "black": {
            "properties": {
                "line_length": {
                    "type": "number"
                },
                "string_normalization": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "type": "object"
        },
        "isort": {
            "properties": {
                "force_to_top": {
                    "type": "string"
                },
                "line_length": {
                    "type": "number"
                },
                "wrap_length": {
                    "type": "number"
                },
                "known_future_library": {
                    "type": "array",
                    "element": "string"
                },
                "known_standard_library": {
                    "type": "array",
                    "element": "string"
                },
                "known_third_party": {
                    "type": "array",
                    "element": "string"
                },
                "known_first_party": {
                    "type": "array",
                    "element": "string"
                },
                "multi_line_output": {
                    "type": "number"
                },
                "forced_separate": {
                    "type": "string"
                },
                "indent": {
                    "type": "number"
                },
                "length_sort": {
                    "type": "boolean"
                },
                "force_single_line": {
                    "type": "boolean"
                },
                "force_grid_wrap": {
                    "type": "number"
                },
                "default_section": {
                    "type": "string"
                },
                "import_heading_future": {
                    "type": "string"
                },
                "import_heading_stdlib": {
                    "type": "string"
                },
                "import_heading_thirdparty": {
                    "type": "string"
                },
                "import_heading_firstparty": {
                    "type": "string"
                },
                "import_heading_localfolder": {
                    "type": "string"
                },
                "balanced_wrapping": {
                    "type": "boolean"
                },
                "order_by_type": {
                    "type": "boolean"
                },
                "lines_after_imports": {
                    "type": "number"
                },
                "lines_between_types": {
                    "type": "number"
                },
                "combine_as_imports": {
                    "type": "boolean"
                },
                "combine_star": {
                    "type": "boolean"
                },
                "include_trailing_comma": {
                    "type": "boolean"
                },
                "use_parentheses": {
                    "type": "boolean"
                },
                "from_first": {
                    "type": "boolean"
                },
                "case_sensitive": {
                    "type": "boolean"
                },
                "force_alphabetical_sort": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false,
            "type": "object"
        },
        "yapf": {
            "properties": {
                "style_config": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "type": "object"
